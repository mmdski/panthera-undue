{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "valgrind",
            "type": "shell",
            "command": "meson test -v --wrap=valgrind --num-processes 1",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "problemMatcher": []
        },
        {
            "label": "test",
            "type": "shell",
            "command": "ninja test",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
